@model DetailsViewModel
@{
    ViewData["Title"] = "کالا " + Model.Product.Name;
}
<div class="row">
    <div class="col-md-8">
        <h1 class="display-5">@Model.Product.Name</h1>
        <hr />
        <img src="@($"/images/{Model.Product.Id}.jpg")"
             alt="@Model.Product.Name"
             class="img-thumbnail" />
        <p class="py-5 text-justify">@Model.Product.Description</p>

        <dl>
            @foreach (var item in Model.Categories)
            {
                <dt><a>@item.Name</a></dt>
                <dd>@item.Description</dd>
            }
        </dl>
        <div>

        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading"><p>قیمت : @Model.Product.Item.Price</p></div>
            <div class="panel-body">
                <a class="btn btn-primary"
                   asp-controller="Home"
                   asp-action="AddToCart"
                   asp-route-itemId="@Model.Product.ItemId">افزودن به سبد خرید</a>
            </div>

        </div>
    </div>
</div>
